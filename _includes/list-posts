{% assign posts = include.posts %}
<ul class="toc">
    {% for post in posts %}
    <li>
        <a href="{{ post.url | absolute_url }}">
            {% if post.subheadline %}
            <span>{{ post.subheadline }}</span>
            {% endif %}
            {{ post.date | date_to_string }} - {{ post.title }}
        </a>
    </li>
    {% endfor %}
